sopLyrics = \lyricmode {
      \set stanza = "1."
      Dies ist die Nacht, da mir er -- schie -- nen
      des gro -- ßen Got -- tes Freund -- lich -- keit!
      Das Kind, dem al -- le Eng -- gel die -- nen __
      bringt Licht in mei -- ne Dun -- kel -- heit,
      Licht __ in mei -- ne Dun -- kel -- heit,
      und die -- ses Welt- und Him -- mels -- licht
      weicht hun -- dert -- tau -- send Son -- nen nicht,
      weicht __ hun -- dert -- tau -- send Son -- nen nicht!
}
soptwoLyrics = \lyricmode {
      \set stanza = "2."
      Lass dich er -- leuch -- ten, mei -- ne See -- le,
      ver -- säu -- me nicht den Gna -- den -- schein!
      Der Glanz in die -- ser klei -- nen Höh -- le __
      dringt bald in al -- le Welt hin -- ein, 
      bald __ in al -- le Welt hin -- ein, 
      er trei -- bet weg der Höl -- le Macht, der 
      Sün -- den und des To -- des Nacht,
      der Sün -- den __ und des To -- des Nacht!
}

